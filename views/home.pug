extends layout

block content
  if currentUser
    h2 Welcome back #{currentUser.name}!
    div(class="post-box")
      each post in posts
        div(class="post-card")
          div(class="post-header")
            h2(class="post-author") #{post.author.name}
          div(class="post-body")
            h2(class="post-title")= post.title
            p(class="post-content")= post.content
          div(class="post-footer")
            p(class="post-date")= post.niceDate
    a(href="/posts/create" class="new-post")  New Post
  else
    div(class="welcome-mat")
      h1 Talkin' Trash
      h2 People are always talking, maybe even about you!
      a(href="/users/signup") Sign Up
    h2(class="sub-header") Here's what members have been saying!
    div(class="post-box")
      each post in posts
        div(class="post-card")
          div(class="post-header")
            h2(class="post-author") ????
          div(class="post-body")
            h2(class="post-title")= post.title
            p(class="post-content")= post.content
          div(class="post-footer")
            p(class="post-date")= post.niceDate
