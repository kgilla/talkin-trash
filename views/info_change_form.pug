extends layout

block content
  div.container.center-content
    form(action="" method="POST")
      h1.main-heading Update Info
      if errors 
        each error in errors
          div.alert.alert-danger= error.msg
      if error
        div.alert.alert-danger= error
      div.form-group
        label(for="first_name") First Name
        input(class="form-control" type="text" name="first_name" value=user ? user.firstName : first_name)
      div.form-group
        label(for="last_name") Last Name
        input(class="form-control" type="text" name="last_name" value=user ? user.lastName : last_name) 
      div.form-group
        label(for="email") Email
        input(class="form-control" type="text" name="email" value=user ? user.email : email) 
      div.form-group
        label(for="password") Enter Your Password
        input(type="text" name="password" placeholder="confirm your password" class="form-control") 
      div.form-group  
        button(type="submit" class="btn btn-primary btn-block") Confirm Changes
        