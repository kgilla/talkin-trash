extends layout

block content
  div.container.h-75.center-content
    form(action=currentUser.url + "/membership" method="POST")
      h1.main-heading= title
      if errors 
        each error in errors
          div.alert.alert-danger= error.msg
      if error
        div.alert.alert-danger= error
      if success
        div.alert.alert-success= success
      div.profile-item.form-group
          h3.profile-item-heading Memebership Level:
          if currentUser.isMember == true
            h4.profile-info-item Treasure
          else 
            h4.profile-info-item Trash
      div(class="form-group")
        label(for="email") Membership Code
        input(type="text" name="code" class="form-control")
      div(class="form-group")  
        button(type="submit" class="btn btn-primary btn-block") Upgrade Membership